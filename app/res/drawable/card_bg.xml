<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

  <solid android:color="@android:color/white"/>

  <stroke
    android:width="@dimen/card_border_width"
    android:color="@color/card_border_color"/>

  <corners
    android:topLeftRadius="@dimen/card_corner_radius"
    android:topRightRadius="@dimen/card_corner_radius"
    android:bottomLeftRadius="@dimen/card_corner_radius"
    android:bottomRightRadius="@dimen/card_corner_radius"/>

  <padding
    android:left="@dimen/card_border_width"
    android:top="@dimen/card_border_width"
    android:right="@dimen/card_border_width"
    android:bottom="@dimen/card_border_width"/>

</shape>
